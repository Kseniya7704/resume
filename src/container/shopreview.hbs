<main class="p-3">
 <div class="row">
    <div class="col-12 gy-2">
        <div class="card">
            <div class="card-body">
        <div class="nav nav-tabs">
            {{#with navigation}}
            {{#each links}}
            <div class="nav-item">
        <a href="{{href}}" class="nav-link">{{text}}</a>
            </div>
            {{/each}}
            <div class="col-2">
            <div class="nav-item">
                <a href="#" class="nav-link disabled">Disabled</a>
            </div>
        </div>
            {{/with}}
        </div>
            </div>
        </div>
    </div>
 </div>

 <section class="ps-0">
        {{#with formBlock}}
        <div class="row">
            <div class="col-8">
                <div class="mb-3">
                    <h2>{{header}}</h2>
                    <p>{{rating.title}}: {{rating.value}}</p>
                </div>
                <div>
                    {{#with actionBlock}}
                    <div class="mt-3 mb-5">
                        <ul class="nav nav-tabs">
                            {{#each tabs}}
                            <li class="nav-item">
                                <a class="nav-link {{#if isActive}} active {{/if}}"
                                    href="#">{{text}}</a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <hr>
                    <div class=" card mt-5 mb-5 p-3">
                        {{#with report}}
                        <p>{{title}}</p>
                        <div>
                            <a class="btn btn-secondary" href="{{button.link}}">{{button.text}}</a>
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                    <hr>
                    <div class="mt-5 mb-5">
                        {{#with feedbackBlock}}
                        <div class="mb-5">
                            <h3>{{title}}</h3>
                        </div>

                        <div class="mt-5 mb-5">
                            {{#each buttons}}
                            {{#if isWarning}}<a class="btn btn-warning mb-2" href="{{link}}">{{text}}</a>{{/if}}
                            {{#if isSuccess}}<a class="btn btn-success mb-2" href="{{link}}">{{text}}</a>{{/if}}
                            {{#if isDanger}}<a class="btn btn-danger mb-2" href="{{link}}">{{text}}</a>{{/if}}
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>

            <div class="col-4">
                {{#with goodsInfo}}
                <div class="card mb-3">
                    <div class="card-body">
                        <img class="rounded mb-3" src="{{photo}}" alt="{{name}}">
                        <h4>{{name}}</h4>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h4>{{price}}</h4>
                        {{#if inMarket}}<p>Є в наявності</p>{{/if}}
                        <div>
                            {{#each buttons}}
                            <div>
                                {{#if isPrimary}}<a class="btn btn-primary mb-2" href="{{link}}">{{text}}</a>{{/if}}
                            </div>
                            <div>
                                {{#if isSecondary}}<a class="btn btn-secondary" href="{{link}}">{{text}}</a>{{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <p>{{seller.title}}: <b>{{seller.value}}</b></p>
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
        {{/with}}
    </section>

    <hr>
    <div>
            {{> reviewItem}}
        </div>

        <hr class="my-5">
    {{#with service}}
    <div class="alert alert-success">
        <h2 class="card-header text-center text-secondary m-3">{{title}}</h2>
        <p class="m-3">{{description}}</p>
        {{#each buttons}}
        <button class="btn btn-primary">
            <a href="{{link}}" class="text-light btn btn-link">{{text}}</a>
        </button>
        {{/each}}
    </div>
    {{/with}}

    <section class="col-12 mb-6">
     <div class="nav">
        <div class="row">
            {{#each footer}}
            <div class="row">
                {{#each this}}
                <div class="nav flex-column">
                    <div class="nav-item mx-2 mb-2">
                        <a href="{{link}}" class="nav-link">{{text}}</a>                    
                    </div>
                    <div class="col-4">
            <div class="nav-item">
                <a href="#" class="nav-link disabled">Disabled</a>
            </div>
        </div>
                </div>
        </div>
        {{/each}}
     </div>
     {{/each}}
     </div>

</main>