{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <header>
        <div>
            <h1>{{name.firstname}} {{name.lastname}}</h1>
        </div>
        <div>
            <b>{{position}}</b>
        </div>
        <br>
        <div>
            <em>{{salary.text}} {{salary.value}}</em>
        </div>
        <br>
        <hr>
    </header>

    <nav>
        <a href="/skills">Skills</a>
        <a href="/summary">Summary</a>
    </nav>

    <main>
        <section>
            <div>
                <h2>{{> title data = summary.title}}</h2>
            </div>
            <div>
                <p>
                    {{summary.text}}
                </p>
            </div>
        </section>

        {{#with section}}
            <div>
                <h2>{{> title data = experience.title}}</h2>
            </div>
            <div>
                <p>
                    {{experience.text}}
                </p>
            </div>
        {{/with}}
    </main>

    <footer>
        <hr>
        <br>
        {{#with social}}
        <a href="{{email.href}}">{{email.text}}</a> /
        <a href={{phone.href}}>{{phone.text}}</a> /
        <a href="https://www.linkedin.com/in/dmytro-test" target="_blank">LinkedIn</a>
        {{/with}}
    </footer>

</div>

