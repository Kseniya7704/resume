<div class="card mt-3 mb-3">
    <div class="card-body">
        <img class="card-img-top" src="{{img}}" alt="{{text}}">
        {{#if isHot}} <span class="badge text-bg-warning rounded-pill mt-3">HOT!</span>{{/if}}
        {{#if isNew}} <span class="badge text-bg-warning rounded-pill mt-3">Нове</span>{{/if}}
        <div>
            {{#if isFast}} <span class="badge text-bg-success mt-3">Швидка
                доставка</span>{{/if}}
        </div>
        <div>
            {{#if isFree}} <span class="badge text-bg-secondary mt-2">Безкоштовна
                доставка</span>{{/if}}
        </div>
        <div class="mt-3 md-2">
            <h4>{{name}}</h4>
            <p>{{review.amount}} {{review.text}}</p>
            <h4>{{price}}</h4>
            <p>{{delivery}}</p>
        </div>
        <div class="mt-2">
            {{#each buttons}}
            {{#if isPrimary}}<a class="btn btn-primary" href="{{link}}">{{text}}</a>{{/if}}
            {{/each}}
        </div>
        <div class="mt-2">
            {{#each buttons}}
            {{#if isSecondary}}<a class="btn btn-secondary" href="{{link}}">{{text}}</a>{{/if}}
            {{/each}}
        </div>

        <div class="mt-3">
            {{#each characteristics}}
            <ul>
                <li class="p-0">{{title}}: {{value}}</li>
            </ul>
            {{/each}}
        </div>
    </div>
</div>